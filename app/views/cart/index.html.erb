<div class="filter red lighten-5">
<div class="container">
  <div class="row">
  <div class="col s6 m6"><h2>Cart</h2></div>
  <div class="col s6 m6 right-align" style="margin-top: 30px;"><%= button_to 'Checkout', cart_checkout_path, class: 'hello', :form => { :class => "checkoutBtn" }, remote: true, method: :post %></div>
  </div>

  <div class="row cart">

    <% @all_cart_item.each do |item| %>

    <div class="col s12 m3">
         <div class="card">
           <div class="card-image">
             <% clothes_set = ClothesSet.find(item.clothes_set_id) %>
             <img src="<%= clothes_set.photo_URL %>" class="cart-img" alt="<%= clothes_set.name %>">
             <span class="card-title" style="color: black;"><%= clothes_set.name %></span>
           </div>
            <input type="hidden" value="<%=clothes_set.id%>" class='setId'>
           <div class="card-action">
             <%= button_to 'Remove from Cart', cart_path(item.id), :form => { :class => "removeCartBtn" }, remote: true, method: :delete %>
           </div>
         </div>
    </div>

    <% end %>

  </div>
</div>
</div>
