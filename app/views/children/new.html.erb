<div class="container">
 <div class="row">
   <h1>New Child Form</h1>

   <%= form_for @new_child do |f| %>
     <%= f.label("Name:") %>
     <%= f.text_field :name %>
     <%= f.label("Gender") %>
     <%= f.radio_button(:gender, "Male") %>
     <%= f.label(:gender_male, "Male") %>
     <%= f.radio_button(:gender, "Female") %>
     <%= f.label(:gender_female, "Female")  %>
      <br>
     <%= f.label("Birthday") %>
     <%= f.date_field :birthday %>

     <%= f.label :size_id %><br />
     <%= f.select :size_id, options_for_select(Size.all.map{|size|[size.name, size.id]}) %>



     <%= f.submit("Add Child", class: 'btn') %>
   <% end %>
 </div>
</div>
