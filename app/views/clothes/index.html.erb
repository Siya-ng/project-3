<h1>Browse Clothes</h1>

<div class="row">
  <% @all_clothes.each do |set| %>

  <div class="col s3 oneclothes">
    <h6><%= set.name %></h6>
    <!-- <h5><%=set.id%></h5> -->

    <div class="">
      <img src="<%= set.photo_URL %>" alt="<%= set.name %>">
    </div>
    <% unless set.in_cart(current_user.id) %>
    <%= button_to 'Add to Cart', cart_index_path(:clothes_set_id => set.id), :form => { :class => "addBtn" }, remote: true, method: :post %>
    <% else %>
    <% @cart_item_id = set.cart_id(current_user.id) %>
    <%= button_to 'Remove from Cart', cart_path(@cart_item_id), :form => { :class => "removeBtn" }, remote: true, method: :delete %>
    <% end %>

  </div>


  <% end %>
</div>
