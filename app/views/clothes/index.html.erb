<h1>Browse Clothes</h1>

<div class="row">
  <% @filtered_clothes.each do |set| %>

  <div class="col s3">
    <h6><%= set.name %></h6>
    <div class="">
      <img src="<%= set.photo_URL %>" alt="<%= set.name %>">
    </div>
    <% unless set.in_cart(current_user.id) %>
    <%= button_to 'Add to Cart', cart_index_path(:clothes_set_id => set.id), remote: true, method: :post %>
    <% else %>
    <% @cart_item_id = set.cart_id(current_user.id) %>
    <%= button_to 'Remove from Cart', cart_path(@cart_item_id), remote: true, method: :delete %>
    <% end %>

  </div>

  <% end %>
</div>
