<div class="filter red lighten-5">
  <div class="container">

    <h1>Browse Clothes</h1>

  <%= select_tag "style", options_from_collection_for_select(@styles, "id", "name", @clothes_style_id), onchange: "window.location.replace('/choose_size_style/#{@child.size_id}/' + this.value + '/browse')" %>

  <input type="hidden" value="<%=current_user.points%>" class='userPoints'>

  <h4>Current Balance:</h4>
  <div class="pointsDisplay">
    <h5><%= current_user.points %> points</h5>
  </div>

  <div class="row clothes">
    <% @filtered_clothes.each do |set| %>

    <div class="col s3 ">
      <h6><%= set.name %></h6>
      <input type="hidden" value="<%=set.id%>" class='setId'>

      <div class="">
        <img src="<%= set.photo_URL %>" alt="<%= set.name %>">
      </div>
      <% unless set.in_cart(current_user.id) %>
        <button class = "addBtn">Add To cart</button>
      <% else %>
        <button class = "removeBtn"> Remove from cart</button>
      <% end %>

    </div>


    <% end %>
  </div>

  <div class="row">
    <div class="col s12 m6 l3">
      <div class="card">
        <div class="card-image">
          <%= image_tag('banner_01.jpg') %>
          <span class="card-title">Card Title</span>
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
          <p>I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively.</p>
        </div>
      </div>
    </div>
  </div>

  </div>
</div>
