<div class="container">
  <div class="row">
  <div class="col s6 m6"><h2>My Orders</h2></div>
  <div class="col s6 m6 right-align" style="margin-top: 30px;"><%= link_to '<button class="hello" type="button">History</button>'.html_safe, '/loaned_history' %></div>
  </div>

  <div class="row">
    <% @all_loaned_item.each do |item| %>
      <div class="col s3">
        <% clothes_set = ClothesSet.find(item.clothes_set_id) %>
        <h6><%= clothes_set.name %></h6>
        <div class="">
          <img src="<%= clothes_set.photo_URL %>" alt="<%= clothes_set.name %>">
        </div>
        <%= LoanStatus.find(item.loan_status_id).name %>
      </div>
    <% end %>
  </div>
</div>
